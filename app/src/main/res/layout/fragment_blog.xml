<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="khantique.organisation.com.khantique.Fragment.ContactUsFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Blog"
        android:textSize="20dp"
        android:id="@+id/title"
        android:textStyle="bold"
        android:background="#dcdcdc"
        android:textColor="#d2691e"
        android:layout_marginTop="30dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:textColor="#000000"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:text="The History of Pharaonic Cartouche"
    android:textSize="18dp"
    android:id="@+id/text"/>


    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/webView1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"></WebView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webView1"
        android:id="@+id/read_more1"
        android:background="@drawable/bg2"
        android:text="Read More"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        />

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_below="@+id/read_more1"
           />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/read_more1"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Moroccan Culture"
        android:textSize="18dp"
        android:id="@+id/text2"/>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:id="@+id/webView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"></WebView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webView2"
        android:id="@+id/read_more2"
        android:paddingLeft="15dp"
        android:text="Read More"
        android:layout_marginBottom="30dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg2"
        android:layout_marginLeft="20dp"
        />
   </RelativeLayout>
</ScrollView>
