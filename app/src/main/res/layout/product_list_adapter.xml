            android:src="@drawable/favorite"
            android:layout_alignEnd="@+id/grid_image"
            android:layout_alignRight="@+id/grid_image"
            android:layout_marginTop="5dp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_image"
            android:text="Geovin Furniture 2"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:id="@+id/griddetail_text"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:text="$ 475.00"
            android:textColor="#77A464"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/griddetail_text"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Add to cart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/add_To_Cart"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/price"
            android:background="#ebe9eb"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/griddetail_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
           <!-- <ImageView
                android:layout_width="30dp"
