<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="khantique.organisation.com.khantique.CartActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relative"
        android:background="@drawable/side_nav_bar">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/back"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="Cart"
            android:textSize="18dp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relative">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<khantique.organisation.com.khantique.Adapter.NonScrollListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cartList"></khantique.organisation.com.khantique.Adapter.NonScrollListView>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#000000"
    android:layout_below="@+id/cartList"
    android:layout_marginTop="5dp"
    android:id="@+id/view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:text="Cart totals"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/text"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="subtotal"
        android:id="@+id/text2"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="subtotal"
        android:id="@+id/sub_total"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="shipping"
        android:id="@+id/text3"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Total"
        android:id="@+id/text4"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Total"
        android:id="@+id/total"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="15dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total"
            android:id="@+id/proceed"
            android:background="#A46497"
            android:text="Proceed to checkout"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
