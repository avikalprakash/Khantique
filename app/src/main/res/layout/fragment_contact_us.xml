<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="khantique.organisation.com.khantique.Fragment.ContactUsFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Contact Us"
        android:textSize="20dp"
        android:id="@+id/title"
        android:textStyle="bold"
        android:background="#dcdcdc"
        android:textColor="#d2691e"
        android:layout_marginTop="30dp"/>

<WebView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:id="@+id/webView1"></WebView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_below="@+id/webView1"
    android:layout_marginTop="50dp"
    android:id="@+id/relative"
    android:background="@drawable/bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="Email: "
        android:textSize="12dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:id="@+id/email"
        android:layout_marginLeft="20dp"
        android:text="Contact-us@Khantique.com"
        android:textColor="#d2691e"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="USA phone number: "
        android:textSize="12dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="20dp"
        android:text="001/917-935-7411"
        android:id="@+id/usa_phone"
        android:textColor="#d2691e"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginRight="65dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="Egypt Phone number: "
        android:textSize="12dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/usa_phone"
        android:id="@+id/egypt_phone"
        android:layout_marginLeft="18dp"
        android:text="001/917-935-7411"
        android:textColor="#d2691e"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="65dp"/>

</RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relative"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:textColor="#000000"
    android:text="Thank you and please tell us how can we make you happy!"
    android:gravity="center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"/>
</RelativeLayout>
